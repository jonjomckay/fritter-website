{
  "scripts": {
    "build": "cp -R public dist && cross-env NODE_ENV=production postcss public/style.css -o dist/tailwind.css",
    "start": "cross-env NODE_ENV=development concurrently \"postcss public/style.css -o public/tailwind.css --watch\"  \"live-server ./public\""
  },
  "dependencies": {
    "autoprefixer": "^10.2.5",
    "postcss": "^8.2.14",
    "tailwindcss": "^2.1.2"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "cssnano": "^4.1.10",
    "live-server": "^1.2.1",
    "postcss-cli": "^8.3.1"
  }
}
